ellipsis()
  overflow: hidden
  white-space: nowrap
  text-overflow: ellipsis
/* 超出范围的内容用...代替 */

Triangle()
  width: 0px;
  height: 0px;
  margin-left: 4px;
  border-top: 5px solid #222222;
  border-left: 5px solid transparent;
  border-right: 5px solid transparent;
/* 画一个倒三角 */

Arrow()
  content: "";
  width: 8px;
  height: 8px;
  border:  solid #888888;
  border-width: 1px 0 0 1px;
  transform: translate(-50%, -50%) rotate(-135deg);
/*画一个箭头，配合伪元素::after使用*/